{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug config",
            "program": "${workspaceFolder}/config/target/debug/config",
            "args": [
                "list",
                "r*"
            ],
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "(macOS) Attach",
            "type": "lldb",
            "request": "attach",
            "pid": "${command:pickMyProcess}",
            "expressions": "simple",
            "preRunCommands": [
                // !! change this path if you placed the script somewhere else !!
                "command script import ~/.vscode/rust_prettifier_for_lldb.py"
            ],
        },
        {
            "name": "(Windows) Attach",
            "type": "cppvsdbg",
            "request": "attach",
            "processId": "${command:pickProcess}",
        },
        {
            "name": "Debug sshdconfig",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/sshdconfig/target/debug/sshdconfig.exe",
            "args": ["get"],
            "cwd": "${workspaceFolder}"
        }
    ]
}
