{
    "$schema": "https://aka.ms/dsc/schemas/v3/bundled/resource/manifest.json",
    "type": "Microsoft.Windows.OpenSSH/SSHD",
    "description": "Manage SSH Server Configuration Global Settings",
    "version": "0.1.0",
    "get": {
        "executable": "sshdconfig",
        "args": [
            "get"
        ]
    },
    "set": {
        "executable": "sshdconfig",
        "args": [
            "set",
            {
                "jsonInputArg": "--input",
                "mandatory": true
            }
        ]
    },
    "schema": {
        "command": {
            "executable": "sshdconfig",
            "args": [
                "schema"
            ]
        }
    }
}
